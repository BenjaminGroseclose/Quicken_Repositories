<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="8dp"
    android:layout_width="350dp"
    android:layout_height="250dp"
    android:background="@color/darkGrey">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login Requirements"
            android:textColor="@color/textWhite"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:id="@+id/loginDialog_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginDialog_title"
            android:text="@string/login_username_dialog"
            android:textColor="@color/textWhite"
            android:textSize="20sp"
            android:layout_alignLeft="@id/loginDialog_title"
            android:id="@+id/loginDialog_username"
            android:layout_marginBottom="8dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_password_dialog"
            android:layout_below="@id/loginDialog_username"
            android:layout_alignLeft="@id/loginDialog_title"
            android:textColor="@color/textWhite"
            android:textSize="20sp"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>